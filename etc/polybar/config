[bar/main]

monitor =
monitor-fallback =
monitor-strict = false
override-redirect = false

bottom = true
fixed-center = true
wm-restack = bspwm

width = 100%
height = 24
offset-x = 0%
offset-y = 0.5%

background = ${color.dark}
foreground = ${color.light}

radius-top = 0.0
radius-bottom = 0.0

overline-size = 2
overline-color = ${color.accent}

padding = 0
module-margin-left = 0
module-margin-right = 0

;; NOTE: fonts are indexed by 1 when used so font-0 is 1
font-0 = "Fantasque Sans Mono:pixelsize=12;2"
font-1 = "Iosevka Nerd Font:pixelsize=13;3"

font-2 = "Siji:size=12;2"
