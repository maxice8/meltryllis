[colors]
foreground = #ffffff
background = #00000000

icons = #82b061

bspwm = #67b36f

green = #82B061
red = 9d0006

[bar/main]
width = 100%
height = 35
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

border-size =0
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

;; NOTE: fonts are indexed by 1 when used so font-0 is 1
font-0 = curie:style=Regular:size=12:antialias=false;2
font-1 = Siji:style=Regular:size=11;2
font-2 = FontAwesome:style=Regular:size=10;3
font-3 = Iosevka Nerd Font:style=Regular:antialias=false:size=11;3

modules-left = bspwm title
modules-right = mpd wlan pulseaudio battery date time time-de

tray-position = none

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

wm-restack = bspwm

monitor =
monitor-fallback =
monitor-strict = false
override-redirect = false

[settings]

throttle-output = 5
throttle-output-for = 1
throttle-input-for = 30

screenchange-reload = false

compositing-background = source
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over

pseudo-transparency = true

;; Shows workspaces as small circles
;; Bright grey circle is current workspace
;; Dark grey circle is workspace with open windows
;; Empty circle is workspace with nothing open
[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = false
enable-click = false
enable-scroll = false
reverse-scroll = false
fuzzy-match = true

format-padding = 1
format = <label-state>
label-monitor = %name%

label-dimmed-foreground = #555
label-dimmed-underline = ${colors.background}
label-dimmed-focused-background = #f00

label-focused = %{T2}%{T-}
label-focused-foreground = ${colors.bspwm}
label-focused-padding = 1

label-occupied = %{T2}%{T-}
label-occupied-foreground = ${colors.bspwm}
label-occupied-padding = 1

label-urgent = %{T2}%{T-}
label-urgent-foreground = #af3a03
label-urgent-padding = 1

label-empty = 
label-empty-foreground = #55
label-empty-padding = 1

[module/pulseaudio]
type = custom/script
exec = aubar
tail = true

label-font = 4

click-left = pulseaudio-ctl mute

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC

format-charging =<label-charging>
label-charging = %{F#67b36f}%{T2}%{T-}%{F-} %percentage%%

format-discharging = %{T2}<ramp-capacity>%{T-} <label-discharging>
label-discharging = %percentage%%

format-full = <label-full>
label-full = "%{T2}%{T-}"
label-full-foreground = #4e9c57

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding = 1

;; Spawns a script that outputs time in 2 timezones, reloading every 60
;; seconds.
;; Right-click prompts the script to change between showing time or current
;; date
[module/date]
type = internal/date
interval = 30

date = %%{F#67b36f} %%{F-}%a %d %B

label = %date%
format = <label>

format-padding = 1

[module/time]
type = internal/date
interval = 30

time ="%%{F#67b36f}%%{T2} %%{T-}%%{F-}%I:%M %p"

label = %time%
format = <label>

[module/time-de]
type = custom/script
interval = 30
exec = TZ=Europe/Berlin date +"%I:%M %p  "

[module/mpd]
type = internal/mpd
format-online = <label-song> <label-time>%{T2}%{F#67b36f} <icon-prev><icon-stop><toggle><icon-next>%{F-}%{T-}
format-stopped= <label-song> %{T2}%{T-} <icon-play>
format-offline=<label-offline>
label-time=%{F#a59f85} %elapsed%%{F-}
label-offline=

icon-prev =
icon-stop =
icon-play =
icon-pause =
icon-next =

label-song=%{F#79740e}%{T2}%{T-} %{F-}%artist% - %title%
label-song-maxlen = 70
label-song-ellipsis = true

[module/title]
type = internal/xwindow
label = %title:0:30:...%

