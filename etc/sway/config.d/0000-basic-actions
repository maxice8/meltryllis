# Start a terminal
bindsym $mod+Return exec alacritty

# Kill focused window
bindsym $mod+q kill

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Exit sway
bindsym $mod+Shift+q exec swaymsg exit

# Start appmenu
bindsym $mod+d exec appmenu
bindsym $mod+m exec mpdmenu
bindsym $mod+Shift+m exec playmenu

# Make the current focus fullscreen
bindsym $mod+x fullscreen

# Take screenshot of whole screen or of taken area via slurp
# and copy it to clipboard
bindsym $mod+s exec grimshot screen
bindsym $mod+Shift+s exec grimshot window
bindsym $mod+Ctrl+s exec grimshot area

bindsym $mod+a exec wf-recordershot screen
bindsym $mod+Shift+a exec wf-recordershot window
bindsym $mod+Ctrl+a exec wf-recordershot area

# Alt-tab behaviour
bindsym $mod+tab exec alt-tab next
bindsym $mod+Shift+tab exec alt-tab prev

# Lock screen
bindsym alt+l exec lock

# Dismiss a notification
bindsym $mod+Space exec makoctl dismiss
