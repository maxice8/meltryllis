# Start a terminal
bindsym $mod+Return exec alacritty

# Kill focused window
bindsym $mod+q kill

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Exit sway
bindsym $mod+Shift+q exec swaymsg exit

# Start appmenu
bindsym $mod+d exec appmenu
bindsym $mod+m exec mpdmenu
bindsym $mod+p exec powermenu
bindsym $mod+Shift+m exec playmenu

# Make the current focus fullscreen
bindsym $mod+x fullscreen

# Alt-tab behaviour
bindsym $mod+tab exec echo -n next | nc -U "$XDG_RUNTIME_DIR"/alt-tab.sock
bindsym $mod+Shift+tab exec echo -n prev | nc -U "$XDG_RUNTIME_DIR"/alt-tab.sock

# Lock screen
bindsym alt+l exec lock

# Dismiss a notification
bindsym $mod+Space exec makoctl dismiss
