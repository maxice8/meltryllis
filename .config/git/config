[alias]
    ls = log --oneline --decorate --graph
    s = show
    ss = show --stat
    c = commit --no-edit
    co = checkout
    st = status -sb
    sta = stash
    up = pull --rebase
    re = remote
    prch = !git show --color=auto @{u}..HEAD
    prss = !git diff --stat --color=auto @{u}..HEAD
    cp = log @{u}.. --pretty='%C(yellow)%h %C(white)%s'
    df = diff
    bre = branch -m
    rb = rebase
    rbi = rebase -i
    rbc = rebase --continue
    rbs = rebase --skip
    gam = commit --amend --verbose --no-edit
    a = add
    ap = add -p
    p = push --force-with-lease
    pi = cherry-pick
    h = !gha "$@" | tee /dev/tty | copy
    show-title = show --no-patch --format=%s
