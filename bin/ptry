#!/usr/bin/ion
# print the command and it's output and also copy to clipboard
# useful to show to people
test $len(@args) -eq 1 && exit 1

let prompt = ''
if test $(id -u) -eq 0
	let prompt = '#'
else
	let prompt = '$'
end

fn run prompt:str command:str
	echo $prompt @split($command)
	@split($command)
end

run $prompt @args[1..]
