#!/bin/sh

notify() {
	notify-send --expire-time=3000 --app-name=grimshot "$@"
}

case "$1" in
	area)
		geometry="$(slurp -d)"
		what="Selected Area"
		;;
	window)
		focused="$(swaymsg -t get_tree | jq -r 'recurse(.nodes[]?, .floating_nodes[]?) | select(.focused)')"
		geometry="$(echo "$focused" | jq -r '.rect | "\(.x),\(.y) \(.width)x\(.height)"')"
		app_id="$(echo "$focused" | jq -r '.app_id // empty')"
		if [ -z "$app_id" ]; then
			app_id="$(echo "$focused" | jq -r '.window_properties | .class')"
		fi
		what="$app_id window"
		;;
	screen)
		what="screen"
		grim - | wl-copy --type image/png ||
			notify Screenshot "Error taking screen of $what with grim" &&
			notify Screenshot "$what copied to buffer"
		exit 0
		;;
esac

grim -g "$geometry" - | wl-copy --type image/png ||
	notify Screenshot "Error taking screen of $what with grim" &&
	notify Screenshot "$what copied to buffer"
