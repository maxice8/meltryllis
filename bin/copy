#!/usr/bin/ion
exists -s XDG_SESSION_TYPE || exit

let clipboard:[str] = [""]
if test $XDG_SESSION_TYPE = "x11"
	let clipboard = [xsel -bi]
else if test $XDG_SESSION_TYPE = wayland
	let clipboard = [wl-copy]
end

if test $len(@args) -gt 1
	@clipboard <<< @args[1..]
	exit
end

read input
@clipboard <<< $input
