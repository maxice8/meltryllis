#!/usr/bin/env bash
branch="${1:?'Need branch defined'}" ; shift
pkg="${1:?'Need package defined'}" ; shift

diff --color --minimal \
	--new-line-format="+%L" \
	--old-line-format="-%L" \
	--unchanged-line-format='' \
	<(xbps-query -Rf "${pkg}" | sort) \
	<(xbps-query --repository=hostdir/binpkgs/"$branch" -f "$pkg" | sort)
