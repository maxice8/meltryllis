#!/usr/bin/ion
#
# Add keybindings for certain places
#
for ws in 1 2 3 4 5 6
	msg Setting switch to workspace $ws to Super + $ws
	gsettings set \
		org.gnome.desktop.wm.keybindings switch-to-workspace-$ws \
		"['<Super>$ws']"
	msg Setting move window to workspace $ws to Shift + Super + $ws
	gsettings set \
		org.gnome.desktop.wm.keybindings move-to-workspace-$ws \
		"['<Shift><Super>$ws']"
end

#
# Alt-tab should only switch on its own workspace
#
msg Making Alt-Tab work only on windows of the same workspace
gsettings set org.gnome.shell.app-switcher current-workspace-only true

#
# Super + R to run commands, i use it a lot it is better than the default
# of Alt + F2
#
msg Making command run dialog be activated via Super + r
gsettings set org.gnome.desktop.wm.keybindings panel-run-dialog \
	"['<Super>r']"

#
# Create virtual package called gnome-enty-apps that has all the apps
# from gnome-apps that we want
#
msg Installing virtual version of gnome-apps with only apps we want
doas apk add --virtual gnome-apps \
	nautilus \
	gpaste \
	gnome-weather \
	gnome-tweaks \
	gnome-software \
	gnome-disk-utility \
	gnome-calculator \
	gnome-photos \
	gnome-power-manager \
	gnome-screenshot \
	dconf-editor \
	gnome-calendar \
	gnome-characters \
	gnome-system-monitor \
	gnome-documents \
	gnome-clocks
