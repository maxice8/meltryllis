#!/bin/sh

clock=1

print_clock() {
	echo " $(date "+%H:%M") $(TZ=Europe/Berlin date "+%H:%M")"
}

print_date() {
	echo " $(date +%d/%m/%Y)"
}

toggle() {
	if [ "$clock" = 1 ]; then
		clock=0
		print_date

		return
	fi

	if [ "$clock" = 0 ]; then
		clock=1
		print_clock

		return
	fi
}

trap "toggle" USR1

while :; do
	[ "$clock" = 1 ] && print_clock || print_date
	sleep 60 &
	wait
done
