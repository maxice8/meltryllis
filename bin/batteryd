#!/bin/sh
get_battery() {
	_cap="$(cat /sys/class/power_supply/BAT0/capacity)"
	[ "$_cap" -gt 100 ] && echo "100" || echo "$_cap"
}

ischarging() {
	[ "$(acpi -a | cut -d : -f2)" = " on-line" ] && return 0 || return 1
}

count() {
	_bat="$(get_battery)"
	case "$_bat" in
		100)
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		9[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		8[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		7[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		6[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		5[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		4[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		3[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		2[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		1[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
		[0-9])
			if ischarging; then
				icon=""
			else
				icon=""
			fi
			;;
	esac
	echo "$icon $_bat%"
}

event() {
	acpi_listen | grep --line-buffered ac_adapter |
		while read -r _; do
			count
		done
}

# Start the vent daemon
event &

# If the user sends us USR1 update now.
trap "count" USR1

# Count the value of the battery, sleep 30 seconds in the background.
# we do that to be able to catch signals like USR1 and act on in the
# meantime.
while true; do
	count
	sleep 30 &
	wait
done
