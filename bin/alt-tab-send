#!/usr/bin/python3

import socket
import os
import sys

SOCKET = os.path.join(os.environ['XDG_RUNTIME_DIR'], 'alt-tab.sock')


def main(action: bytes):
    sock = socket.socket(socket.AF_UNIX)
    sock.connect(SOCKET)
    sock.send(action)


if __name__ == '__main__':
    if len(sys.argv) > 1:
        action = sys.argv[1]
    else:
        action = 'next'

    main(action.encode())
