#!/usr/bin/ion
#
# Operations done:
#
# - Replace git@ with https://
# - Replace the : in the middle with /
# - Remove the .git at the end
test $len(@args) -eq 1 && exit 1
let url = @args[1]
let url = $replace($url ':(/)?' /) 
let url = $regex_replace($url '^git@' "https://")
echo $join(@split($regex_replace($url '.git$' " ")))
