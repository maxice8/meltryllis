#!/bin/sh

rofi_command="rofi -theme themes/maimmenu.rasi"

### Options ###
screen=""
area=""
window=""

chosen="$(printf "%s\\n%s\\n%s" "$screen" "$area" "$window" | $rofi_command -dmenu -selected-row 1)"
case $chosen in
    $screen)
        sleep 0.3; maim \
			| tee ~/usr/screenshots/"$(date +%T-%d)"-fullscreen.png \
			| xclip -selection clipboard -t image/png
        ;;
    $area)
		maim -s \
			| tee ~/usr/screenshots/"$(date +%T-%d)"-area.png \
			| xclip -selection clipboard -t image/png
        ;;
    $window)
        sleep 0.3; maim -i "$(xdotool getactivewindow)" \
			| tee ~/usr/screenshots/"$(date +%T-%d)"-activewindow.png \
			| xclip -selection clipboard -t image/png
        ;;
esac


