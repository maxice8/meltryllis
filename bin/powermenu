#!/bin/sh

rofi_command="rofi -theme themes/powermenu.rasi"

### Options ###
power_off=""
reboot=""
lock=""
suspend="鈴"
log_out=""
# Variable passed to rofi
chosen="$(printf "%s\\n%s\\n%s\\n%s\\n%s\\n" \
			"$power_off" \
			"$reboot" \
			"$lock" \
			"$suspend" \
			"$log_out" | $rofi_command -dmenu -selected-row 2)"

case $chosen in
    $power_off)
		sudo busybox poweroff
        ;;
    $reboot)
		sudo busybox reboot
        ;;
    $lock)
		exit 0
        ;;
    $suspend)
        mpc -q pause
        amixer set Master mute
		sudo sh -c 'echo mem > /sys/power/state'
        ;;
    $log_out)
		pkill wm # Kills wm shell script and together with it, bspwm
        ;;
esac
