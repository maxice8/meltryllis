#!/bin/sh

rofi_command="rofi -theme themes/powermenu.rasi"

### Options ###
power_off=""
reboot=""
lock=""
suspend="鈴"
log_out=""
# Variable passed to rofi
chosen="$(printf "%s\\n%s\\n%s\\n%s\\n%s\\n" \
			"$power_off" \
			"$reboot" \
			"$lock" \
			"$suspend" \
			"$log_out" | $rofi_command -dmenu -selected-row 2)"

case $chosen in
    $power_off)
		sudo busybox poweroff
        ;;
    $reboot)
		sudo busybox reboot
        ;;
    $lock)
		lock -l dim
        ;;
    $suspend)
		lock -s dim
        ;;
    $log_out)
		pkill -15 chromium
		swaymsg exit # Kills wm shell script and together with it, bspwm
        ;;
esac
